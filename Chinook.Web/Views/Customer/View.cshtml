@model Chinook.Model.Customer

@{
    ViewBag.Title = "Customer:View";
    Layout = "_Layout";
}

<h2>Customer:View</h2>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <table class="table table-responsive table-hover table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Company</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.FirstName</td>        
                        <td>@Model.LastName</td>        
                        <td>@Model.Company</td>        
                        <td>@Model.Email</td>        
                    </tr>  
                </tbody>
            </table>    
            
        </div>
    </div>    
</div>